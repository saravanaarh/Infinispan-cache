<config xmlns="urn:org:jgroups"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:org:jgroups http://www.jgroups.org/schema/jgroups-5.2.xsd">

    <!--
    UDP multicast configuration for dynamic pod discovery
    Similar to Keycloak's approach - supports any number of pods
    -->
    <UDP bind_addr="${jgroups.bind.address:SITE_LOCAL}"
         bind_port="${jgroups.bind.port:0}"
         mcast_addr="${jgroups.mcast.addr:228.6.7.8}"
         mcast_port="${jgroups.mcast.port:46655}"
         tos="0"
         ucast_send_buf_size="1m"
         mcast_send_buf_size="1m"
         ucast_recv_buf_size="20m"
         mcast_recv_buf_size="25m"
         ip_ttl="${jgroups.ip_ttl:2}"
         thread_naming_pattern="pl"
         bundler_type="transfer-queue"
         bundler.max_size="64000"

         thread_pool.min_threads="0"
         thread_pool.max_threads="200"
         thread_pool.keep_alive_time="60000" />

    <!-- Redundancy protocol for network failures -->
    <RED/>

    <!--
    PING protocol for multicast discovery
    Any pod can join the cluster dynamically
    -->
    <PING num_discovery_runs="3"/>

    <!-- Cluster membership and failure detection -->
    <MERGE3 min_interval="10000" max_interval="30000" />
    <FD_SOCK2 offset="50000"/>
    <FD_ALL3/>
    <VERIFY_SUSPECT timeout="1000"/>

    <!-- Reliable message delivery -->
    <pbcast.NAKACK2 xmit_interval="100"
                    xmit_table_num_rows="50"
                    xmit_table_msgs_per_row="1024"
                    xmit_table_max_compaction_time="30000"
                    resend_last_seqno="true" />

    <UNICAST3 xmit_interval="100"
              xmit_table_num_rows="50"
              xmit_table_msgs_per_row="1024"
              xmit_table_max_compaction_time="30000" />

    <!-- Message stability and group membership -->
    <pbcast.STABLE desired_avg_gossip="5000" max_bytes="1M" />
    <pbcast.GMS print_local_addr="false" join_timeout="500" />

    <!-- Flow control and fragmentation -->
    <UFC max_credits="4m" min_threshold="0.40" />
    <MFC max_credits="4m" min_threshold="0.40" />
    <FRAG4 frag_size="60000"/>
</config>
